@model IEnumerable<MovieWeb.Models.Movie>
@{
    ViewData["Title"] = "Home";
}

@if (Model.Count() > 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Image</th>
                <th>Movie ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Rating</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><img src="@movie.imgUrl" width="180" height="200"></td>
                    <td>@movie.id</td>
                    <td>@movie.title</td>
                    <td>@movie.description</td>
                    <td>@movie.rating/10</td>
                    <td><a class="btn btn-warning" asp-controller="WebHome" asp-action="Edit" asp-route-id="@movie.id">Edit</a></td>
                    <td><a class="btn btn-danger" asp-controller="WebHome" asp-action="Delete" asp-route-id="@movie.id" onclick="return confirm('Do you want to delete @movie.title?')">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">No Movie Data</div>
}